<h1 class="text-center mt-4">Listing all articles</h1>

<%= link_to "New Article", new_article_path, class: "btn btn-default btn-lg", id: "new-article-button" %>


<% if @articles.empty? %>
	<h1 id="no-articles">No Articles Created</h1>
<% else %>
	<% @articles.each do |article| %>
		<div class="card">
			<div class="article-title">
				<%= link_to article.title, @article %>
			</div>
			<div class="article-body">
				<%= truncate(article.body, length: 500) %>
			</div>
		</div>
	<% end %>
<% end %>
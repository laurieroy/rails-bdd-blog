<h3 class="text-center">Adding New Article</h3>

<div class="row">
	<div class="col-md-12">
		<%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded text-light", local: true) do |f| %>
			<div class="form-group">
				<div class="control-label col-md-2">
					<%= f.label :title %>
				</div>
				<div class="col-10">
					<%= f.text_field :title, class:"form-control",
							placeholder: "Title of Article", autofocus: true %>
				</div>
			</div>
			
			<div class="form-group">
				<div class="control-label col-md-2">
					<%= f.label :body %>
				</div>
				<div class="col-10">
					<%= f.text_area :body, class:"form-control",
							placeholder: "Body of Article" %>
				</div>
			</div>

			<div class="form-group">
				<%= f.submit class: "btn btn-outline-light btn-lg" %>
			</div>
		<% end %>
	</div>
</div>